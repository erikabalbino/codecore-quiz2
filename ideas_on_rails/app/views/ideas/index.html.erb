<div class="container1"
  style="margin-top: 90px;
  margin-left: 20px;
  margin-right: 15px;
  margin-bottom: 10px">
  <% @ideas.each do |idea| %>
    <div class="container1">
        <div class="" style="font-size: 25px">
          <%= link_to idea.title, idea_path(idea) %> <br>
        </div>
        <div class="" style="font-size: medium">
          <p><%= idea.description  %></p>
        </div>

        <div>
          <span> By <%= link_to idea.user&.first_name%></span>
          <button type="button" class="btn btn-outline-dark">Join</button>
          <button type="button" class="btn btn-outline-dark">Like</button>
        </div>
        <hr class="hr">
    </div>
  <% end %>
</div>
