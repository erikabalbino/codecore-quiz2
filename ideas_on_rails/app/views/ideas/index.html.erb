<div class="container1"
  style="margin-top: 70px;
  margin-left: 20px;
  margin-right: 15px;
  margin-bottom: 10px">
  <% @ideas.each do |idea| %>
    <div class="container1">
        <div class="" style="font-size: large">
          <%= link_to idea.title, idea_path(idea) %> <br>
          <!-- <h2><%= idea.title %></h2> -->
        </div>
        <div class="" style="font-size: medium">
          <p><%= idea.description  %></p>
        </div>
        
        <div>

          <button type="button" class="btn btn-outline-dark">Join</button>
          <button type="button" class="btn btn-outline-dark">Like</button>
        </div>
        <hr>
    </div>
  <% end %>
</div>
